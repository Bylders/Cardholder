<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	app:layout_behavior="@string/appbar_scrolling_view_behavior"
	tools:showIn="@layout/activity_contact_details"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	tools:context=".ContactDetails">

	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content">

		<android.support.v7.widget.CardView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:id="@+id/about_card"
			android:layout_marginTop="50dp"
			android:layout_marginLeft="25dp"
			android:layout_marginRight="25dp"
			android:layout_marginBottom="50dp">
			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:padding="5dp"
				android:id="@+id/text"
				android:layout_marginTop="30dp"
				android:layout_marginBottom="30dp"/>
		</android.support.v7.widget.CardView>

		<android.support.design.widget.FloatingActionButton
			android:layout_width="wrap_content"
			android:layout_marginLeft="40dp"
			android:layout_below="@id/about_card"
			android:src="@drawable/ic_phone_white_48dp"
			android:layout_height="wrap_content"
			android:id="@+id/call"/>

		<android.support.design.widget.FloatingActionButton
			android:layout_width="wrap_content"
			android:layout_below="@id/about_card"
			android:layout_height="wrap_content"
			android:src="@drawable/ic_email_open_white_48dp"
			android:id="@+id/email"
			android:layout_centerHorizontal="true"
			/>


		<android.support.design.widget.FloatingActionButton
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_below="@id/about_card"
			android:id="@+id/website"
			android:src="@drawable/ic_web_white_48dp"
			android:layout_marginRight="40dp"
			android:layout_alignParentRight="true"
			android:layout_alignParentEnd="true"
			/>

	</RelativeLayout>

</android.support.v4.widget.NestedScrollView>
